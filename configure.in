AS_IF([test "x$have_python" != "xyes"],
	EXTERNAL_OPTIONALS_DISABLED="${EXTERNAL_OPTIONALS_DISABLED} python"
    , EXTERNAL_OPTIONALS_ENABLED="${EXTERNAL_OPTIONALS_ENABLED} python")
